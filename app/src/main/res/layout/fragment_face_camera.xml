<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/notificationGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <com.regula.facesdk.view.NotificationTextView
        android:id="@+id/notificationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/hint_view_background"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notificationGuideline" />

    <ImageButton
        android:id="@+id/lightButton"
        android:layout_width="@dimen/reg_img_button_size"
        android:layout_height="@dimen/reg_img_button_size"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/flashlight_button"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageButton
        android:id="@+id/swapCameraButton"
        android:layout_width="@dimen/reg_img_button_size"
        android:layout_height="@dimen/reg_img_button_size"
        android:background="@android:color/transparent"
        android:padding="6dp"
        android:scaleType="centerInside"
        android:src="@drawable/swap_camera_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/exitButton"
        />

    <ImageButton
        android:id="@+id/exitButton"
        android:layout_width="@dimen/reg_img_button_size"
        android:layout_height="@dimen/reg_img_button_size"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/close_button"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>